# Database Configuration (Required)
DATABASE_URL=postgresql://dev:dev123@localhost:5432/call_router_dev

# Server Configuration
PORT=3000
LOG_LEVEL=info
FASTIFY_CLOSE_GRACE_DELAY=500

# Redis Configuration
# Option 1: Use Redis URL (recommended)
REDIS_URL=redis://localhost:6379

# Option 2: Use individual Redis settings
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
